<div class="panel-body">
  <div class="bulk-discounts">
    <div class="js-promo-rule-bulk-discounts"></div>

    <button class="btn btn-primary btn-success js-add-promo-rule-bulk-discount">
      <span class="icon icon-add"></span>
      <%= Spree.t(:add) %>
    </button>
  </div>
</div>

<%= content_tag :div, nil, class: "hidden js-original-promo-rule-bulk-discounts",
  data: { :'original-bulk-discounts' => promotion_rule.preferred_min_quantites } %>

<script type="text/x-handlebars-template" id="promo-rule-bulk-discount-bulk-discounts-select-name-template">
  <%= param_prefix %>[preferred_min_quantites][{{productId}}]
</script>

<script type="text/x-handlebars-template" id="bulk-discount-template">
  <div class="promo-rule-bulk-discount panel panel-default">
    <div class="panel-heading">
      <a class="js-remove-promo-rule-bulk-discount delete pull-right">
        <span class="icon icon-delete"></span>
      </a>
      <div class="col-md-6">
        <label><%= Spree.t(:product) %></label>
      </div>
      <div class="col-md-5">
        <label><%= Spree.t(:min_quatity) %></label>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="panel-body row">
      <div class="col-md-6">
        <input class="js-promo-rule-bulk-discount-product-select fullwidth" type="hidden" value="{{ productSelect.value }}">
      </div>
      <div class="col-md-6">
        <input class="js-promo-rule-bulk-discount-min-quantity input_number form-control fullwidth" name="<%= param_prefix %>[preferred_min_quantites][{{ productSelect.value }}]" type="number" min="1" step="1" value={{minQuantity.value}}>
      </div>
    </div>
  </div>
</script>
